<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/fondo_pant_pral">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bNuevaR"
            android:id="@+id/btNuevaR"
            android:clickable="true"
            android:background="@drawable/abc_btn_borderless_material"
            android:singleLine="true"
            android:textColor="@color/Blanco"
            android:textStyle="normal"
            android:textSize="17sp"
            android:enabled="true"
            android:onClick="clickNuevaR"
            android:layout_marginBottom="138dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bListarR"
            android:id="@+id/btListaR"
            android:clickable="true"
            android:background="@drawable/abc_btn_borderless_material"
            android:singleLine="false"
            android:textSize="17sp"
            android:textColor="@color/Blanco"
            android:enabled="true"
            android:onClick="clickListarR"
            android:layout_marginEnd="10dp"
            android:layout_alignTop="@+id/btNuevaR"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
